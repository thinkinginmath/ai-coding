{
  "name": "multi-stage-cart-challenge",
  "version": "1.0.0",
  "description": "Multi-stage challenge: E-commerce shopping cart",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:stage1": "jest --grep 'Stage 1'",
